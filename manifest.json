{
  "manifest_version": 3,
  "name": "CtrlK",
  "version": "0.0.1",
  "description": "按下 Ctrl + K 弹出面板的浏览器扩展。",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "commands",
    "windows"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "commands": {
    "open-panel": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "弹出搜索面板面板"
    }
  },
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "./dist/icon_16.png",
      "32": "./dist/icon_32.png",
      "64": "./dist/icon_64.png",
      "128": "./dist/icon_128.png"
    }
  },
  "icons": {
    "16": "./dist/icon_16.png",
    "32": "./dist/icon_32.png",
    "64": "./dist/icon_64.png",
    "128": "./dist/icon_128.png",
    "256": "./dist/icon_256.png",
    "512": "./dist/icon_512.png",
    "1024": "./dist/icon_1024.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*",
        "runtime-api.js",
        "dist/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}